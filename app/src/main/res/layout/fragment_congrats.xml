<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CongratsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:text="Congratulations \nYour Order Placed"
            android:textSize="25dp"
            android:fontFamily="@font/vollkorn_bold"
            android:textAlignment="center"
            android:textColor="#1c7549"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="284dp"
            android:layout_height="260dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/checkcongrats" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gohomebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_congrats"
            android:text="Go Home" />
    </LinearLayout>
</FrameLayout>